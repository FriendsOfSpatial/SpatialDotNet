<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.nlog-project.org/schemas/NLog.xsd NLog.xsd"
      autoReload="true"
      throwExceptions="false"
      internalLogLevel="Off" internalLogFile="c:\temp\nlog-internal.log">

  <targets async="true">
    <target xsi:type="File" name="f" fileName="${basedir}/logs/${shortdate}.log" layout="${uppercase:${level}} ${message}"/>
    <!--<target xsi:type="Console" name="c" layout="${uppercase:${level}} ${message}"/>
    <target xsi:type="Debugger" name="d" layout="${uppercase:${level}} ${message}"/>-->
  </targets>

  <rules>
    <logger name="*" minlevel="Trace" writeTo="f" />
    <!--<logger name="d" minlevel="Trace" writeTo="debugger" />-->
  </rules>
</nlog>